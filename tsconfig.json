{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["app/assets/*"],
      "@constants/*": ["app/constants/*"],
      "@utils/*": ["app/utils/*"],
      "@types/*": ["app/types/*"],
      "@hooks/*": ["app/hooks/*"]
    }
  }
}
